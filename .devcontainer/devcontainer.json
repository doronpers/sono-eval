{
  "containerUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-azuretools.vscode-docker",
        "github.vscode-pull-request-github"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "mountDockerSocket": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [
    8000,
    8088,
    5432,
    6379
  ],
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11",
  "name": "sono-eval",
  "portsAttributes": {
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "ignore"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "ignore"
    },
    "8000": {
      "label": "Sono-Eval API",
      "onAutoForward": "notify"
    },
    "8088": {
      "label": "Superset Dashboard",
      "onAutoForward": "ignore"
    }
  },
  "postCreateCommand": "python -m pip install --upgrade pip setuptools wheel && pip install -r requirements.txt && pip install -e . --no-deps",
  "postStartCommand": "pip install -r requirements.txt || true",
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1"
  },
  "schemaVersion": "1.0.0",
  "workspaceFolder": "/workspaces/sono-eval"
}
